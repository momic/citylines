<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/sclName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/sclDepartureFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>    
    <TextView
        android:id="@+id/sclDepartureTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>    
    <TextView
        android:id="@+id/sclDepartureDistance"
        android:text="Distance: 300m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>    
    <TextView
        android:id="@+id/sclReturnFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/sclReturnTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/sclReturnDistance"
        android:text="Distance: 300m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>        
</LinearLayout>